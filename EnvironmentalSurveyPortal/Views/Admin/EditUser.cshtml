@model EnvironmentalSurveyPortal.Models.User

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.Title = "Edit User Infomation";
}

<div id="content">
    <div class="container">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mt-4">
            <h4 class="mb-0 text-gray-800">Edit User Infomation</h4>
        </div>
        <div class="card o-hidden border-0 shadow-lg mt-3 mb-5">
            <div class="card-body py-5 px-3 px-md-5">

                <form method="post" class="form-user-info user">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.UID)
                    <div class="row">

                        @{
                            var roleSelectList = new List<SelectListItem>
                                                                            {
                                new SelectListItem{ Text = "Admin", Value = "Admin"},
                                new SelectListItem{ Text = "Staff/Faculty", Value = "Staff"},
                                new SelectListItem{ Text = "Student", Value = "Student"},
                            };
                        }

                        <div class="form-group col-12 col-md-6 mb-4 mb-md-5">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label mb-0" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-12 col-md-6 mb-4 mb-md-5">
                            @Html.LabelFor(model => model.Class, htmlAttributes: new { @class = "control-label mb-0" })
                            @Html.EditorFor(model => model.Class, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Class, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-12 col-md-6 mb-4 mb-md-5">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label mb-0" })
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-12 col-md-6 mb-4 mb-md-5">
                            @Html.LabelFor(model => model.Section, htmlAttributes: new { @class = "control-label mb-0" })
                            @Html.EditorFor(model => model.Section, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Section, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-12 col-md-6 mb-4 mb-md-5">
                            @Html.LabelFor(model => model.Specification, htmlAttributes: new { @class = "control-label mb-0" })
                            @Html.EditorFor(model => model.Specification, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Specification, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-12 col-md-6 mb-4 mb-md-5">
                            @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label mb-0" })
                            @Html.DropDownListFor(model => model.Role, roleSelectList, new { @class = "form-control custom-dropdown-arrow" })
                            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-12 text-center mt-3">
                            <button type="submit" class="btn btn-user btn-primary px-4">Save Changes</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
