@model EnvironmentalSurveyPortal.Models.Support

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.Title = "Edit Support Infomation";
}

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mt-4">
            <h4 class="mb-0 text-gray-800">Edit Support Infomation</h4>
        </div>
        <div class="card o-hidden border-0 shadow-lg mt-3 mb-5">
            <div class="card-body py-5 px-3 px-md-5">

                @using (Html.BeginForm("EditSupportInfo", "Admin", FormMethod.Post, new { @class="form-support user" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.SupportID)

                    <div class="form-group mb-5">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label mb-0" })
                        <div class="">
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control text-gray-900" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-5">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label mb-0" })
                        <div class="">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control text-gray-900" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-5">
                        @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label mb-0" })
                        <div class="">
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control text-gray-900" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-5">
                        @Html.LabelFor(model => model.Website, htmlAttributes: new { @class = "control-label mb-0" })
                        <div class="">
                            @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control text-gray-900" } })
                            @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Save Changes" class="btn btn-user btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
