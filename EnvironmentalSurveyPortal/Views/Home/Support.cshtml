@model EnvironmentalSurveyPortal.Models.Support
@{
    ViewBag.Title = "Support Infomation";
}
<!-- Contact Us Section -->
<section>
    <div class="container">
        <div class="row">
            <!-- Section Titile -->
            <div class="post-list-header">
                <div class="post-list-title text-danger">@ViewBag.Title</div>
            </div>
        </div>
        <div class="row">
            <!-- Section Titile -->
            <div class="col-md-6 mt-3 contact-widget-section2 wow animated fadeInLeft" data-wow-delay=".2s">
                <div id="map" style="width:350px;height:350px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.320129079049!2d106.66581634144399!3d10.786775016026814!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ed2392c44df%3A0xd2ecb62e0d050fe9!2sFPT-Aptech+Computer+Education+HCM!5e0!3m2!1sfr!2s!4v1564461291600!5m2!1sfr!2s" width="450" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
                <p></p>
                <div class="find-widget">
                    Address: <a href="#">@Model.Address</a>
                </div>
                <div class="find-widget">
                    Phone:  <a href="#">@Model.Email</a>
                </div>
                <div class="find-widget">
                    Phone:  <a href="#">@Model.Phone</a>
                </div>

                <div class="find-widget">
                    Website:  <a href="@Model.Website">@Model.Website</a>
                </div>
            </div>

            <!-- contact form -->
            <div class="col-md-6 wow animated fadeInRight" data-wow-delay=".2s">
                <div class="contact-form">
                    <form id="contactFrom">
                        <div class="frm-row">
                            <input type="text" name="nname" placeholder="Name" class="frm-input">
                        </div>
                        <div class="frm-row">
                            <input type="text" name="eemail" placeholder="Email" class="frm-input">
                        </div>
                        <div class="frm-row">
                            <input type="text" name="ssubject" placeholder="Subject" class="frm-input">
                        </div>
                        <dic class="frm-row">
                            <textarea class="frm-input" rows="8" name="mmessage" placeholder="Enter your message"></textarea>
                        </dic>
                        <div class="frm-row send-button text-center">
                            <button type="button" class="frm-button material-button">Send message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
