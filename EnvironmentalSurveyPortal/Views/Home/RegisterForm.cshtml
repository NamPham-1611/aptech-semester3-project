@model EnvironmentalSurveyPortal.Models.RegisterAccount

    <form onsubmit="requestRegister(this, event)">
        @Html.ValidationSummary(true, null, new { @class = "alert-danger" })
        <div class="frm-row">
            @Html.EditorFor(model => model.UID, null, new { htmlAttributes = new { @class = "frm-input", placeholder = "Roll No or Employee Number" } })
            @Html.ValidationMessageFor(model => model.UID, null, new { @class = "text-danger" })
        </div>
        <div class="frm-row">
            @Html.EditorFor(model => model.Password, null, new { htmlAttributes = new { @class = "frm-input", placeholder = "Password" } })
            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
        </div>
        <div class="frm-row">
            @Html.EditorFor(model => model.RePassword, null, new { htmlAttributes = new { @class = "frm-input", placeholder = "Retype Password" } })
            @Html.ValidationMessageFor(model => model.RePassword, null, new { @class = "text-danger" })
        </div>
        <div class="frm-row">
            @Html.EditorFor(model => model.Name, null, new { htmlAttributes = new { @class = "frm-input", placeholder = "Your Name" } })
            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
        </div>
        <div class="frm-row">
            @Html.EditorFor(model => model.Class, null, new { htmlAttributes = new { @class = "frm-input", placeholder = "Class" } })
            @Html.ValidationMessageFor(model => model.Class, null, new { @class = "text-danger" })
        </div>
        <div class="frm-row">
            @Html.EditorFor(model => model.Specification, null, new { htmlAttributes = new { @class = "frm-input", placeholder = "Specification" } })
            @Html.ValidationMessageFor(model => model.Specification, null, new { @class = "text-danger" })
        </div>
        <div class="frm-row">
            @Html.EditorFor(model => model.Section, null, new { htmlAttributes = new { @class = "frm-input", placeholder = "Section" } })
            @Html.ValidationMessageFor(model => model.Section, null, new { @class = "text-danger" })
        </div>

        <div class="frm-row">
            <button class="frm-button material-button full" type="submit">Register</button>
        </div>
    </form>
<div class="frm-row">
    <p class="txt-center">Do you already have an account? <a href="#" data-modal="loginModal">Login</a></p>
</div>
